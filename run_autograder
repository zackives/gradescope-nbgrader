#!/usr/bin/env bash
mkdir submitted
mkdir submitted/hacker
ln -s `pwd`/submission submitted/hacker/ps1
mkdir results
echo > results/results.json
cp header.ipynb source/
cp -r ps1 source/
nbgrader db assignment add ps1
nbgrader assign ps1
nbgrader autograde ps1
nbgrader feedback ps1
nbgrader export
cat grades.csv | grep 'ps1,.*hacker.*' | jq --raw-input 'split("\n") | map(split(",")) |  map({"score": .[9], "visibility": "after_due_date", "stdout_visibility": true, "extra_data": { "max_score": .[10]}, "tests": [], "leaderboard": {"name": "points", "value": .[9]}})' > results/results.json

